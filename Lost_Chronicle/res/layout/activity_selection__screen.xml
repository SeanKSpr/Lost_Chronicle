    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:orientation="vertical"
	android:id="@+id/selection_screen_layout" >
	<Button
	    android:id="@+id/scheduler_activity_button"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent" 
	    android:layout_weight=".33"
	    android:background="@drawable/tome"
	    />
	<Button
	    android:id="@+id/rpg_battle_activity_button"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent" 
	    android:layout_weight=".33"
	    android:background="@drawable/dungeon_entrance"
	    />
</LinearLayout>
