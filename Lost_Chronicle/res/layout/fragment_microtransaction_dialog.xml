<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="275dp"
    android:background="@drawable/microtransaction_bg" >

    <TextView
        android:id="@+id/item_cost_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/item_name_text"
        android:layout_alignBottom="@id/item_name_text"
        android:layout_alignParentRight="true"
        android:textColor="#a4c639"
        android:textSize="28sp" />

    <Button
        android:id="@+id/continue_microtransaction_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/google_play_image"
        android:background="@drawable/microtransaction_continue" />

    <ImageView
        android:id="@+id/google_play_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/microtransaction_text"
        android:layout_marginTop="48dp"
        android:contentDescription="@string/companion_activity_label"
        android:scaleType="center"
        android:src="@drawable/google_play" />

    <TextView
        android:id="@+id/microtransaction_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/item_name_text"
        android:layout_marginTop="34dp"
        android:text="@string/google_play_dialog"
        android:textSize="18sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/item_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textSize="36sp"
        android:textStyle="bold" />

</RelativeLayout>